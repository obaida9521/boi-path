<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BoiPath" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/secondaryBg</item>

        <item name="android:windowLightStatusBar">false</item>
        <!--        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">@color/toolbar_night</item>-->

        <item name="android:windowBackground">@color/secondaryBg</item>
    </style>


